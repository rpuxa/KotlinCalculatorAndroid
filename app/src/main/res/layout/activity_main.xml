<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <EditText
        android:id="@+id/expression"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_weight="5"
        android:background="@null"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="right"
        android:inputType="textMultiLine"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/transparent"
        android:textSize="30sp"
        tools:text="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/night"
        android:orientation="vertical">

    </LinearLayout>

    <EditText
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_span="3"
        android:layout_weight="5"
        android:background="@null"
        android:cursorVisible="true"
        android:ems="10"
        android:focusable="false"
        android:freezesText="true"
        android:gravity="left"
        android:imeOptions="flagNoExtractUi"
        android:inputType="textMultiLine"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/transparent"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_weight="0"
        android:background="@color/night"
        android:orientation="vertical"></LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/a1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/n7"
                app:north_east_image="@drawable/graph" />

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/a2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/n8"
                app:north_west_image="@drawable/e"
                app:south_west_image="@drawable/pi" />

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/a3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/n9"
                app:north_west_image="@drawable/x" />

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/a4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/plus" />

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/a5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/delete"
                app:north_east_image="@drawable/cancel" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/b1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/n4"
                app:north_east_image="@drawable/lg"
                app:north_west_image="@drawable/log"
                app:south_east_image="@drawable/ln" />

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/b2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/n5" />

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/b3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/n6" />

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/b4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/minus" />

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/b5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/fx"
                app:north_east_image="@drawable/dx"
                app:north_west_image="@drawable/defenit_integral" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/c1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/n1"
                app:north_west_image="@drawable/cos"
                app:south_west_image="@drawable/acos" />

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/c2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/n2"
                app:north_west_image="@drawable/sin"
                app:south_west_image="@drawable/asin" />

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/c3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/n3"
                app:north_east_image="@drawable/cot"
                app:north_west_image="@drawable/tan"
                app:south_east_image="@drawable/acot"
                app:south_west_image="@drawable/atan" />

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/c4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/multiply"
                app:north_east_image="@drawable/cbrt"
                app:north_west_image="@drawable/pow2"
                app:south_east_image="@drawable/sqrt"
                app:south_west_image="@drawable/pow" />

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/c5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/constants" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/d1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/open_bracket"
                app:north_east_image="@drawable/brackets_left" />

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/d2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/n0"
                app:north_west_image="@drawable/n00"
                app:south_west_image="@drawable/n000l" />

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/d3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/close_bracket"
                app:north_west_image="@drawable/brackets_right" />

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/d4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/divide"
                app:north_west_image="@drawable/minuspower_brackets" />

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/d5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/settings" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/e1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/left"
                app:north_east_image="@drawable/double_left" />

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/e2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/right"
                app:north_west_image="@drawable/double_right" />

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/e3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/point"
                app:north_west_image="@drawable/comma" />

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/e4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/rational_mode" />

            <ru.rpuxa.kotlincalculatorandroid.views.DragButton
                android:id="@+id/e5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:main_image="@drawable/undo"
                app:north_west_image="@drawable/redo" />
        </TableRow>
    </TableLayout>

</LinearLayout>

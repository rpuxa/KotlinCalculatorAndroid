<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_func"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/left" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/radicals"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/radicals" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/trigonometry"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/trigonometry" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/diffs"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/diffs" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/hyperbolic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/hyperbolic" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/other_func"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/other_func" />

        </LinearLayout>

        <ImageView
            android:id="@+id/right_func"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/right" />
    </LinearLayout>
</LinearLayout>